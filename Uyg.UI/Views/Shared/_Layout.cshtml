<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Haber Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Uyg.UI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Haber Portal</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item d-none" id="userInfoNavItem">
                            <span class="nav-link text-dark" id="userInfo"></span>
                        </li>
                        <li class="nav-item" id="loginNavItem">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                        </li>
                        <li class="nav-item" id="registerNavItem">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                        </li>
                        <li class="nav-item d-none" id="logoutNavItem">
                            <a class="nav-link text-dark" href="#" onclick="logout()">Çıkış Yap</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Haber Portal
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/auth.js"></script>
    <script src="~/js/articles.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Sayfa yüklendiğinde yetkilendirme durumuna göre menüyü güncelle
        $(document).ready(function() {
            if (tokenManager.isAuthenticated()) {
                $('#loginNavItem, #registerNavItem').addClass('d-none');
                $('#logoutNavItem, #userInfoNavItem').removeClass('d-none');
                
                // Kullanıcı bilgilerini getir
                tokenManager.getUserInfo()
                    .then(function(userInfo) {
                        $('#userInfo').text(userInfo.userName + ' (' + userInfo.role + ')');
                    })
                    .catch(function(error) {
                        console.error('Kullanıcı bilgileri alınamadı:', error);
                    });
            } else {
                $('#loginNavItem, #registerNavItem').removeClass('d-none');
                $('#logoutNavItem, #userInfoNavItem').addClass('d-none');
            }
        });

        // Çıkış yapma fonksiyonu
        function logout() {
            tokenManager.removeToken();
            window.location.href = '/Account/Login';
        }
    </script>
</body>
</html>
